{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "module": "commonjs",
        "target": "es2015",
        "moduleResolution": "node", // for inline -m es6
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true,
        "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
        "paths": {
            "@root/*": ["src/*"],
            "@core/*": ["src/core/*"],
            "@models/*": ["src/models/*"],
            "@validators/*": ["src/validators/*"]
        },
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
