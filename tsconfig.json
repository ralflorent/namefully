{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "./",
        "module": "commonjs",
        "target": "es2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true,
        "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
        "paths": {
            "@core/*": ["src/core/*"],
            "@models/*": ["src/models/*"],
            "@validators/*": ["src/validators/*"]
        },
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
