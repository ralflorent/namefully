{
  "compilerOptions": {
    "outDir": "dist/esm",
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["es2022"]
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts", "src/fixtures"]
}
