{
  "name": "namefully",
  "version": "1.2.0",
  "description": "A JavaScript utility for handling person names in a particular order, way, or shape.",
  "author": "Ralph Florent",
  "license": "MIT",
  "repository": "github:ralflorent/namefully",
  "homepage": "https://namefully.netlify.app",
  "main": "dist/lib/index.js",
  "types": "dist/types/index.d.ts",
  "browser": "dist/umd/namefully.min.js",
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "name",
    "format"
  ],
  "scripts": {
    "example": "webpack --config webpack.dev.js --progress && node ./dist/example/index.js",
    "format": "prettier --write '{src,test}/**/*.ts'",
    "prebuild": "rm -rf dist",
    "build": "tsc && tsc -p tsconfig.dts.json && webpack --config webpack.prod.js --progress",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --collectCoverage=true"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "*",
    "clean-webpack-plugin": "^3.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.2.5",
    "terser-webpack-plugin": "^2.3.5",
    "ts-jest": "^29.1.0",
    "ts-loader": "^6.2.1",
    "tslint": "^6.0.0",
    "typescript": "~5.3.0",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  }
}
