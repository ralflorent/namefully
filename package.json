{
  "name": "namefully",
  "version": "2.0.0",
  "description": "Handle personal names in a particular order, way, or shape.",
  "author": "Ralph Florent",
  "license": "MIT",
  "repository": "github:ralflorent/namefully",
  "homepage": "https://namefully.netlify.app",
  "keywords": ["format", "parse", "human", "personal", "family", "name"],
  "type": "module",
  "main": "dist/esm/index.js",
  "browser": "dist/namefully.min.js",
  "files": ["dist"],
  "exports": {
    ".": "./dist/esm/index.js",
    "./*": {
      "import": "./dist/esm/*.js",
      "require": "./dist/cjs/*.js"
    }
  },
  "typesVersions": {
    "*": { "*": ["./dist/esm/*"] }
  },
  "scripts": {
    "start": "tsx example/main.ts",
    "format": "prettier --write src",
    "lint": "eslint src",
    "test": "jest",
    "test:cov": "jest --collectCoverage",
    "prebuild": "shx rm -rf dist",
    "build:esm": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:dts": "tsc -p tsconfig.dts.json",
    "build": "npm run build:esm && npm run build:cjs && npm run build:dts && rollup -c",
    "prepublish": "npm run format && npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.6.0",
    "rollup": "^4.44.0",
    "shx": "^0.4.0",
    "ts-jest": "^29.4.0",
    "tslib": "^2.8.1",
    "tsx": "^4.20.3",
    "typescript": "~5.3.3",
    "typescript-eslint": "^8.35.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  },
  "jest": {
    "moduleNameMapper": {"^(\\.{1,2}/.*)\\.js$": "$1"},
    "transform": {"^.+\\.ts$": "ts-jest"}
  }
}
